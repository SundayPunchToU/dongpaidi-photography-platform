# 懂拍帝后端服务环境变量配置示例
# 复制此文件为 .env 并根据实际情况修改配置

# 服务器配置
PORT=3000
HOST=0.0.0.0
NODE_ENV=production

# 管理员账户配置
ADMIN_USERNAME=admin@dongpaidi.com
ADMIN_PASSWORD=admin123456
ADMIN_EMAIL=admin@dongpaidi.com

# 安全配置
SESSION_SECRET=your-secret-key-here
TOKEN_EXPIRY=24h
MAX_LOGIN_ATTEMPTS=5

# 日志配置
LOG_LEVEL=info
ENABLE_CONSOLE_LOG=true
ENABLE_FILE_LOG=false
LOG_DIR=./logs

# API配置
API_PREFIX=/api/v1
API_TIMEOUT=10000
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# 文件上传配置
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif
UPLOAD_DIR=./uploads

# 数据库配置（为将来扩展准备）
DB_TYPE=memory
DB_HOST=localhost
DB_PORT=3306
DB_NAME=dongpaidi
DB_USERNAME=
DB_PASSWORD=
DB_SSL=false
