/* 小红书风格详情页面样式 */
page {
  background: #fff;
  height: 100vh;
}

.detail-page {
  min-height: 100vh;
  padding-bottom: calc(env(safe-area-inset-bottom) + 120rpx);
}

/* 自定义导航栏 */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: calc(env(safe-area-inset-top) + 16rpx);
  padding-bottom: 16rpx;
  padding-left: 24rpx;
  padding-right: 24rpx;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  z-index: 100;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.nav-left {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.05);
  border-radius: 50%;
  transition: all 0.3s ease;
}

.nav-left:active {
  background: rgba(0, 0, 0, 0.1);
  transform: scale(0.9);
}

.nav-actions {
  display: flex;
  gap: 16rpx;
}

.nav-btn {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.05);
  border-radius: 50%;
  transition: all 0.3s ease;
}

.nav-btn:active {
  background: rgba(0, 0, 0, 0.1);
  transform: scale(0.9);
}

/* 图片轮播区域 */
.image-section {
  position: relative;
  margin-top: calc(env(safe-area-inset-top) + 104rpx);
}

.image-swiper {
  width: 100%;
  height: 100vw;
  max-height: 80vh;
}

.detail-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.image-counter {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  background: rgba(0, 0, 0, 0.6);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  backdrop-filter: blur(10rpx);
}

/* 内容区域 */
.content-section {
  padding: 32rpx 24rpx;
  background: #fff;
}

.content-header {
  margin-bottom: 24rpx;
}

.content-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1a1a1a;
  line-height: 1.4;
  margin-bottom: 16rpx;
  display: block;
  letter-spacing: 0.5rpx;
}

.content-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  letter-spacing: 0.3rpx;
  display: block;
}

/* 标签区域 */
.tags-section {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 32rpx;
}

.tag-item {
  padding: 12rpx 20rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #666;
  border: 1rpx solid rgba(0,0,0,0.05);
  transition: all 0.3s ease;
}

.tag-item:active {
  background: linear-gradient(135deg, #007aff 0%, #0056cc 100%);
  color: #fff;
  transform: scale(0.95);
}

/* 拍摄信息 */
.shooting-info {
  background: #f8f9fa;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
}

.info-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.info-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
}

.info-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.info-label {
  font-size: 22rpx;
  color: #999;
  font-weight: 500;
}

.info-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 600;
}

/* 作者信息 */
.author-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 16rpx rgba(0,0,0,0.04);
}

.author-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.author-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  border: 3rpx solid #fff;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.1);
}

.author-details {
  flex: 1;
}

.author-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 8rpx;
  display: block;
}

.author-desc {
  font-size: 24rpx;
  color: #999;
  line-height: 1.4;
  display: block;
}

.follow-btn {
  padding: 16rpx 32rpx;
  background: linear-gradient(135deg, #007aff 0%, #0056cc 100%);
  color: #fff;
  border-radius: 24rpx;
  font-size: 26rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 16rpx rgba(0, 122, 255, 0.3);
}

.follow-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 12rpx rgba(0, 122, 255, 0.4);
}

.follow-btn.followed {
  background: #f8f9fa;
  color: #666;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

/* 互动统计 */
.interaction-stats {
  display: flex;
  justify-content: space-around;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 20rpx;
  margin-bottom: 32rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-icon {
  font-size: 32rpx;
}

.stat-text {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}

/* 评论区域 */
.comments-section {
  background: #fff;
}

.comments-header {
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 24rpx;
}

.comments-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.comment-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.comment-item {
  display: flex;
  gap: 16rpx;
}

.comment-avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.comment-content {
  flex: 1;
}

.comment-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.comment-user {
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
}

.comment-time {
  font-size: 22rpx;
  color: #999;
}

.comment-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 12rpx;
  display: block;
}

.comment-actions {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.comment-like {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.comment-like:active {
  background: rgba(0,0,0,0.05);
  transform: scale(0.95);
}

.comment-like.liked {
  background: rgba(255,71,87,0.1);
}

.like-icon {
  font-size: 24rpx;
}

.like-count {
  font-size: 22rpx;
  color: #666;
}

.comment-reply {
  padding: 8rpx 16rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  font-size: 24rpx;
  color: #666;
  transition: all 0.3s ease;
}

.comment-reply:active {
  background: #e9ecef;
  transform: scale(0.95);
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx 24rpx calc(env(safe-area-inset-bottom) + 16rpx);
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-top: 1rpx solid rgba(0, 0, 0, 0.05);
}

.action-left {
  flex: 1;
}

.comment-input {
  width: 100%;
  padding: 20rpx 24rpx;
  background: #f8f9fa;
  border-radius: 24rpx;
  font-size: 26rpx;
  color: #333;
  border: 1rpx solid transparent;
}

.action-right {
  display: flex;
  gap: 12rpx;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
  padding: 12rpx 16rpx;
  border-radius: 16rpx;
  transition: all 0.3s ease;
  min-width: 80rpx;
}

.action-btn:active {
  transform: scale(0.9);
  background: rgba(0,0,0,0.05);
}

.action-btn.liked {
  background: rgba(255,71,87,0.1);
}

.action-btn.collected {
  background: rgba(255,193,7,0.1);
}

.action-icon {
  font-size: 32rpx;
}

.action-text {
  font-size: 20rpx;
  color: #666;
  font-weight: 500;
}
