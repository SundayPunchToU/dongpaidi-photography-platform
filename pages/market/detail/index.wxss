/* 相机设备详情页面样式 */
.camera-detail-page {
  width: 100%;
  height: 100vh;
  background: #f8f9fa;
  display: flex;
  flex-direction: column;
}

/* 自定义导航栏 */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 132rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  padding: 0 32rpx 16rpx;
  z-index: 1000;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.nav-left, .nav-btn {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.9);
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.nav-left:active, .nav-btn:active {
  transform: scale(0.9);
  background: rgba(0, 0, 0, 0.05);
}

.nav-right {
  display: flex;
  gap: 16rpx;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.nav-icon {
  font-size: 28rpx;
  color: #333;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  gap: 32rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 内容滚动区域 */
.content-scroll {
  flex: 1;
  margin-top: 132rpx;
  margin-bottom: 120rpx;
}

/* 设备图片区域 */
.camera-images {
  width: 100%;
  height: 500rpx;
  background: #fff;
}

.images-swiper {
  width: 100%;
  height: 100%;
}

.camera-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
  background: #fff;
}

/* 信息卡片 */
.info-card {
  background: #fff;
  margin: 16rpx 24rpx;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

/* 卖家/商家信息 */
.seller-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.seller-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex: 1;
}

.seller-avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  border: 3rpx solid #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.seller-details {
  flex: 1;
}

.seller-name {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 6rpx;
}

.seller-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.seller-rating {
  font-size: 24rpx;
  color: #d4af37;
  font-weight: 500;
}

.seller-location {
  font-size: 22rpx;
  color: #999;
}

/* 联系按钮 */
.contact-btn {
  padding: 12rpx 24rpx;
  background: linear-gradient(135deg, #d4af37 0%, #ffd700 100%);
  border-radius: 20rpx;
  transition: all 0.3s ease;
}

.contact-btn:active {
  transform: scale(0.95);
}

.contact-text {
  font-size: 24rpx;
  font-weight: 500;
  color: #1a1a1a;
}

/* 设备内容 */
.camera-content {
  .camera-title {
    display: block;
    font-size: 32rpx;
    font-weight: 600;
    color: #1a1a1a;
    line-height: 1.4;
    margin-bottom: 16rpx;
  }
}

/* 价格区域 */
.price-section {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.current-price {
  font-size: 36rpx;
  font-weight: 700;
  color: #ff4757;
}

.price-unit {
  font-size: 24rpx;
  color: #666;
}

.original-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}

/* 押金信息 */
.deposit-info {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 20rpx;
  padding: 12rpx 16rpx;
  background: rgba(255, 193, 7, 0.1);
  border-radius: 8rpx;
}

.deposit-label {
  font-size: 24rpx;
  color: #856404;
  font-weight: 500;
}

.deposit-amount {
  font-size: 26rpx;
  color: #856404;
  font-weight: 600;
}

/* 设备标签 */
.camera-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag-item {
  padding: 8rpx 16rpx;
  background: rgba(212, 175, 55, 0.1);
  border-radius: 16rpx;
  font-size: 22rpx;
  color: #d4af37;
  font-weight: 500;
}

/* 卡片头部 */
.card-header {
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.card-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a1a;
}

/* 设备参数网格 */
.specs-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.spec-item {
  padding: 16rpx;
  background: #fafafa;
  border-radius: 12rpx;
  border: 1rpx solid #f0f0f0;
  text-align: center;
}

.spec-value {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
  line-height: 1.4;
}

/* 描述内容 */
.description-content {
  .description-text {
    font-size: 28rpx;
    color: #333;
    line-height: 1.6;
  }
}

/* 租赁/交易详情 */
.rental-details, .trade-details {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.rental-item, .trade-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.rental-item:last-child, .trade-item:last-child {
  border-bottom: none;
}

.rental-label, .trade-label {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

.rental-value, .trade-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 600;
  text-align: right;
  flex: 1;
  margin-left: 32rpx;
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  padding: 24rpx 32rpx calc(env(safe-area-inset-bottom) + 24rpx);
  border-top: 1rpx solid rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  justify-content: space-between;
  z-index: 100;
}

.action-left {
  display: flex;
  gap: 32rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.action-item:active {
  background: rgba(0, 0, 0, 0.05);
  transform: scale(0.95);
}

.action-icon {
  font-size: 32rpx;
}

.action-icon.liked {
  color: #ff4757;
}

.action-icon.collected {
  color: #d4af37;
}

.action-count {
  font-size: 20rpx;
  color: #666;
  font-weight: 500;
}

/* 购买/租赁按钮 */
.purchase-btn {
  background: linear-gradient(135deg, #d4af37 0%, #ffd700 100%);
  padding: 16rpx 32rpx;
  border-radius: 32rpx;
  transition: all 0.3s ease;
}

.purchase-btn:active {
  transform: scale(0.95);
}

.purchase-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #1a1a1a;
}

/* 底部安全区域 */
.safe-area-bottom {
  height: calc(120rpx + env(safe-area-inset-bottom));
}
