/* 相机市场页面样式 */
.market-page {
  background-color: #f8f9fa;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 搜索栏 - 与约拍页面保持完全一致 */
.search-section {
  display: flex;
  align-items: center;
  padding: 16rpx 20rpx 14rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
  gap: 16rpx;
}

.search-container {
  flex: 1;
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 24rpx;
  padding: 12rpx 16rpx;
  height: 48rpx;
  transition: all 0.2s ease;
}

.search-container:active {
  background: #eeeeee;
}

.search-input {
  flex: 1;
  margin-left: 12rpx;
  font-size: 24rpx;
  color: #333;
}

.search-input::placeholder {
  color: #999;
  font-size: 24rpx;
}

/* 标签页导航 - 与首页topics-section保持一致 */
.tabs-section {
  background: white;
  padding: 8rpx 0 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.tabs-container {
  display: flex;
  padding: 0 20rpx;
  gap: 32rpx;
  justify-content: center;
}

.tab-item {
  position: relative;
  padding: 8rpx 4rpx;
  transition: all 0.2s ease;
  white-space: nowrap;
}

.tab-item:active {
  transform: scale(0.95);
}

.tab-item.active .tab-text {
  color: #333;
  font-weight: 600;
}

.tab-text {
  font-size: 26rpx;
  color: #999;
  font-weight: 400;
  line-height: 1;
  transition: all 0.2s ease;
}

/* 标签页内容 */
.tab-content {
  flex: 1;
}

.tab-panel {
  padding: 20rpx 30rpx;
}

/* 博物馆风格 - 推荐相机 */
.museum-style {
  background: linear-gradient(180deg, #fafafa 0%, #f5f5f5 100%);
  padding: 40rpx 30rpx;
}

.museum-header {
  text-align: center;
  margin-bottom: 30rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #e8e8e8;
}

.museum-title {
  font-size: 28rpx;
  font-weight: 400;
  color: #2c2c2c;
  letter-spacing: 1rpx;
  margin-bottom: 8rpx;
  display: block;
}

.museum-subtitle {
  font-size: 20rpx;
  color: #999;
  font-style: italic;
  letter-spacing: 0.5rpx;
}

/* 顶级相机集合展示横幅 */
.camera-collection-banner {
  margin-bottom: 40rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 6rpx 24rpx rgba(0,0,0,0.1);
}

.banner-container {
  position: relative;
  height: 200rpx;
  overflow: hidden;
}

.collection-image {
  width: 100%;
  height: 100%;
  filter: brightness(0.7) contrast(1.1);
}

.banner-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(0,0,0,0.4) 0%, rgba(0,0,0,0.2) 100%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.collection-info {
  text-align: center;
  color: #fff;
  padding: 0 30rpx;
}

.collection-title {
  font-size: 24rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
  display: block;
  letter-spacing: 0.5rpx;
}

.collection-subtitle {
  font-size: 18rpx;
  opacity: 0.9;
  margin-bottom: 8rpx;
  display: block;
  letter-spacing: 1rpx;
  font-style: italic;
}

.collection-description {
  font-size: 16rpx;
  opacity: 0.8;
  line-height: 1.4;
  font-style: italic;
}

.museum-gallery {
  display: flex;
  flex-direction: column;
  gap: 80rpx;
}

.exhibit-card {
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.08);
  transition: all 0.4s ease;
}

.exhibit-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 48rpx rgba(0,0,0,0.12);
}

.exhibit-image-container {
  position: relative;
  height: 400rpx;
  background: linear-gradient(135deg, #f8f8f8 0%, #e8e8e8 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.exhibit-image {
  width: 80%;
  height: 80%;
  filter: drop-shadow(0 8rpx 16rpx rgba(0,0,0,0.15));
}

.exhibit-spotlight {
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.3) 0%, transparent 70%);
  pointer-events: none;
}

.exhibit-placard {
  padding: 40rpx;
  background: #fff;
}

.placard-header {
  margin-bottom: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  padding-bottom: 20rpx;
}

.exhibit-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #2c2c2c;
  display: block;
  margin-bottom: 8rpx;
  letter-spacing: 0.5rpx;
}

.exhibit-brand {
  font-size: 24rpx;
  color: #8c8c8c;
  font-style: italic;
}

.exhibit-description {
  font-size: 26rpx;
  color: #5c5c5c;
  line-height: 1.6;
  margin-bottom: 32rpx;
  font-style: italic;
}

.technical-specs {
  margin-bottom: 32rpx;
}

.specs-title {
  font-size: 24rpx;
  color: #8c8c8c;
  font-weight: 500;
  margin-bottom: 16rpx;
  display: block;
  letter-spacing: 1rpx;
}

.specs-list {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.spec-item {
  font-size: 22rpx;
  color: #666;
  line-height: 1.4;
}

.exhibit-footer {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  padding-top: 24rpx;
  border-top: 1rpx solid #f0f0f0;
}

.price-section {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
}

.current-price {
  font-size: 36rpx;
  color: #d4af37;
  font-weight: 600;
}

.original-price {
  font-size: 24rpx;
  color: #bbb;
  text-decoration: line-through;
}

.rating-section {
  text-align: right;
}

.stars {
  display: flex;
  align-items: center;
  gap: 6rpx;
  margin-bottom: 4rpx;
}

.rating-value {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

.review-count {
  font-size: 20rpx;
  color: #999;
}

/* 闲鱼风格 - 交易和租赁页面 */
.xianyu-style {
  background: #f7f7f7;
  padding: 0;
}

.xianyu-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 24rpx;
  background: #fff;
  border-bottom: 1rpx solid #f5f5f5;
}

.filter-section {
  display: flex;
  gap: 16rpx;
}

.filter-btn, .sort-btn {
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 8rpx 16rpx;
  background: #f8f8f8;
  border-radius: 16rpx;
  font-size: 22rpx;
  color: #666;
  transition: all 0.2s ease;
  border: 1rpx solid #f0f0f0;
}

.filter-btn:active, .sort-btn:active {
  background: #f0f0f0;
  transform: scale(0.98);
}

.publish-btn {
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 8rpx 20rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
  color: #fff;
  font-weight: 500;
  transition: all 0.2s ease;
}

/* 交易页面发布按钮 - 闲鱼橙色 */
.xianyu-style:nth-child(2) .publish-btn {
  background: #ff6f00;
}

/* 租赁页面发布按钮 - 绿色 */
.xianyu-style:nth-child(3) .publish-btn {
  background: #52c41a;
}

.publish-btn:active {
  transform: scale(0.98);
  opacity: 0.8;
}

.xianyu-list {
  padding: 20rpx 30rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.xianyu-item {
  display: flex;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
  transition: all 0.3s ease;
}

.xianyu-item:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.1);
}

.item-image {
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
}

.item-content {
  flex: 1;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 12rpx;
}

.item-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  flex: 1;
  margin-right: 12rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.condition-tag {
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 500;
  flex-shrink: 0;
}

.condition-tag.used {
  background: #e6f7ff;
  color: #1890ff;
}

.condition-tag.new {
  background: #fff2e8;
  color: #fa8c16;
}

.rental-tag {
  background: #f6ffed;
  color: #52c41a;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.item-price {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.current-price {
  font-size: 32rpx;
  color: #ff7875;
  font-weight: 600;
}

.original-price {
  font-size: 24rpx;
  color: #bbb;
  text-decoration: line-through;
}

.rental-price-section {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
  margin-bottom: 12rpx;
}

.rental-price {
  font-size: 32rpx;
  color: #52c41a;
  font-weight: 600;
}

.price-unit {
  font-size: 22rpx;
  color: #666;
}

.deposit-info {
  font-size: 22rpx;
  color: #999;
  margin-left: 12rpx;
}

.rental-period-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
  font-size: 22rpx;
}

.period {
  color: #52c41a;
  font-weight: 500;
}

.rent-count {
  color: #999;
}

.item-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 12rpx;
}

.tag {
  font-size: 20rpx;
  color: #666;
  background: #f5f5f5;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

.item-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.seller-section, .shop-section {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.seller-name, .shop-name {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}

.seller-rating, .shop-rating {
  display: flex;
  align-items: center;
  gap: 4rpx;
  font-size: 22rpx;
  color: #333;
}

.location-time {
  text-align: right;
}

.location-info {
  text-align: right;
}

.location {
  font-size: 22rpx;
  color: #999;
  display: block;
}

.publish-time {
  font-size: 20rpx;
  color: #bbb;
  margin-top: 4rpx;
}

/* 加载状态 */
.loading-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
}

.loading-text {
  font-size: 26rpx;
  color: #999;
  margin-top: 20rpx;
}







