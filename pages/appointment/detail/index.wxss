/* 约拍详情页面样式 */
.appointment-detail-page {
  width: 100%;
  height: 100vh;
  background: #f8f9fa;
  display: flex;
  flex-direction: column;
}

/* 自定义导航栏 */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 132rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  padding: 0 32rpx 16rpx;
  z-index: 1000;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.nav-left, .nav-btn {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.9);
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.nav-left:active, .nav-btn:active {
  transform: scale(0.9);
  background: rgba(0, 0, 0, 0.05);
}

.nav-right {
  display: flex;
  gap: 16rpx;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.nav-icon {
  font-size: 28rpx;
  color: #333;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  gap: 32rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 内容滚动区域 */
.content-scroll {
  flex: 1;
  margin-top: 132rpx;
  margin-bottom: 120rpx;
}

/* 约拍图片区域 */
.appointment-images {
  width: 100%;
  height: 500rpx;
  background: #000;
}

.images-swiper {
  width: 100%;
  height: 100%;
}

.appointment-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 信息卡片 */
.info-card {
  background: #fff;
  margin: 16rpx 24rpx;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

/* 发布者信息 */
.publisher-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.publisher-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex: 1;
}

.publisher-avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  border: 3rpx solid #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.publisher-details {
  flex: 1;
}

.publisher-name {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 6rpx;
}

.publisher-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.publisher-type {
  font-size: 24rpx;
  color: #d4af37;
  background: rgba(212, 175, 55, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 500;
}

.publish-time {
  font-size: 22rpx;
  color: #999;
}

/* 联系按钮 */
.contact-btn {
  padding: 12rpx 24rpx;
  background: linear-gradient(135deg, #d4af37 0%, #ffd700 100%);
  border-radius: 20rpx;
  transition: all 0.3s ease;
}

.contact-btn:active {
  transform: scale(0.95);
}

.contact-text {
  font-size: 24rpx;
  font-weight: 500;
  color: #1a1a1a;
}

/* 约拍内容 */
.appointment-content .appointment-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  line-height: 1.4;
  margin-bottom: 16rpx;
}

.appointment-content .appointment-description {
  display: block;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

/* 约拍标签 */
.appointment-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag-item {
  padding: 8rpx 16rpx;
  background: rgba(212, 175, 55, 0.1);
  border-radius: 16rpx;
  font-size: 22rpx;
  color: #d4af37;
  font-weight: 500;
}

/* 卡片头部 */
.card-header {
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.card-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a1a;
}

/* 详情网格 */
.detail-grid {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.detail-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 0;
}

.detail-label {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

.detail-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 600;
  text-align: right;
  flex: 1;
  margin-left: 32rpx;
}

/* 状态标签 */
.status-badge {
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.status-badge.open {
  background: rgba(40, 167, 69, 0.1);
  color: #28a745;
}

.status-badge.in_progress {
  background: rgba(255, 193, 7, 0.1);
  color: #ffc107;
}

.status-badge.completed {
  background: rgba(108, 117, 125, 0.1);
  color: #6c757d;
}

.status-badge.closed {
  background: rgba(220, 53, 69, 0.1);
  color: #dc3545;
}

/* 要求说明 */
.requirements-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  padding: 24rpx 32rpx calc(env(safe-area-inset-bottom) + 24rpx);
  border-top: 1rpx solid rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  justify-content: space-between;
  z-index: 100;
}

.action-left {
  display: flex;
  gap: 32rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.action-item:active {
  background: rgba(0, 0, 0, 0.05);
  transform: scale(0.95);
}

.action-icon {
  font-size: 32rpx;
}

.action-icon.liked {
  color: #ff4757;
}

.action-icon.collected {
  color: #d4af37;
}

.action-count {
  font-size: 20rpx;
  color: #666;
  font-weight: 500;
}

/* 申请按钮 */
.apply-btn {
  background: linear-gradient(135deg, #d4af37 0%, #ffd700 100%);
  padding: 16rpx 32rpx;
  border-radius: 32rpx;
  transition: all 0.3s ease;
}

.apply-btn.disabled {
  background: #f5f5f5;
  border: 1rpx solid #e0e0e0;
}

.apply-btn:active:not(.disabled) {
  transform: scale(0.95);
}

.apply-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #1a1a1a;
}

.apply-btn.disabled .apply-text {
  color: #999;
}

/* 底部安全区域 */
.safe-area-bottom {
  height: calc(120rpx + env(safe-area-inset-bottom));
}
