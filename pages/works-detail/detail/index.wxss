/* 作品详情页 - 得物风格 */
.work-detail-page {
  width: 100%;
  height: 100vh;
  background-color: #f8f8f8;
  display: flex;
  flex-direction: column;
}

/* 自定义导航栏 */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 132rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  padding: 0 32rpx 16rpx;
  z-index: 1000;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.nav-left, .nav-btn {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.9);
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.nav-right {
  display: flex;
  gap: 16rpx;
}

/* 内容滚动区域 */
.content-scroll {
  flex: 1;
  margin-top: 132rpx;
  margin-bottom: 120rpx;
}

/* 作品图片区域 */
.work-image-section {
  position: relative;
  width: 100%;
  height: 70vh;
  max-height: 900rpx;
  min-height: 600rpx;
  background: #000;
  overflow: hidden;
}

.work-images {
  width: 100%;
  height: 100%;
}

.work-image {
  width: 100%;
  height: 100%;
  background: #000;
  object-fit: cover;
}

.image-indicator {
  position: absolute;
  bottom: 32rpx;
  right: 32rpx;
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  backdrop-filter: blur(8rpx);
}

/* 图片操作按钮 */
.image-actions {
  position: absolute;
  top: 32rpx;
  right: 32rpx;
  display: flex;
  gap: 12rpx;
}

.image-actions .action-btn {
  width: 64rpx;
  height: 64rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(8rpx);
  transition: all 0.3s ease;
}

.image-actions .action-btn:active {
  transform: scale(0.9);
  background: rgba(0, 0, 0, 0.8);
}

.image-actions .action-icon {
  font-size: 24rpx;
}

/* 作品主卡片 */
.work-main-card {
  background: #fff;
  margin: 16rpx 24rpx;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

/* 用户信息区域 */
.user-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.user-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 24rpx;
}

.user-details {
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.user-desc {
  font-size: 24rpx;
  color: #999;
}

.follow-btn {
  border-radius: 40rpx !important;
  padding: 0 32rpx !important;
  height: 64rpx !important;
  line-height: 64rpx !important;
}

/* 作品信息区域 */
.work-info-section {
  background: #fff;
  padding: 32rpx;
  margin-bottom: 16rpx;
}

.work-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
  margin-bottom: 16rpx;
  display: block;
}

.work-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 24rpx;
  display: block;
  white-space: pre-line;
}

/* 作品标签 */
.work-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.tag-item {
  background: #f0f8ff;
  color: #1890ff;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

/* 拍摄参数 */
.work-params {
  border-top: 1rpx solid #f0f0f0;
  padding-top: 24rpx;
}

.params-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

.params-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.param-item {
  background: #f8f8f8;
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  min-width: 140rpx;
  flex: 1;
}

.param-label {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 4rpx;
}

.param-value {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

/* 相关搜索 */
.related-search {
  background: #fff;
  margin-bottom: 16rpx;
}

.search-header {
  padding: 32rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.search-title {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

/* 评论区域 */
.comments-section {
  background: #fff;
  margin-bottom: 16rpx;
}

.comments-header {
  padding: 32rpx 32rpx 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #f0f0f0;
}

.comments-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.comments-tabs {
  display: flex;
  gap: 32rpx;
}

.tab-item {
  font-size: 28rpx;
  color: #999;
  position: relative;
}

.tab-item.active {
  color: #333;
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 32rpx;
  height: 4rpx;
  background: #1890ff;
  border-radius: 2rpx;
}

/* 评论列表 */
.comments-list {
  padding: 0 32rpx;
}

.comment-item {
  display: flex;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f8f8f8;
}

.comment-item:last-child {
  border-bottom: none;
}

.comment-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.comment-content {
  flex: 1;
}

.comment-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.comment-user {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.comment-time {
  font-size: 22rpx;
  color: #999;
}

.comment-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 16rpx;
  display: block;
}

.comment-actions {
  display: flex;
  align-items: center;
  gap: 32rpx;
}

.comment-like {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 22rpx;
  color: #999;
}

.comment-like.liked {
  color: #1890ff;
}

.comment-reply {
  font-size: 22rpx;
  color: #999;
}

/* 底部操作栏 */
.bottom-action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 16rpx 32rpx;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  gap: 24rpx;
  z-index: 1000;
}

.comment-input {
  flex: 1;
  background: #f8f8f8;
  padding: 16rpx 24rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
}

.input-placeholder {
  font-size: 28rpx;
  color: #999;
}

.action-buttons {
  display: flex;
  gap: 32rpx;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
  color: #666;
}

.action-btn.liked {
  color: #ff4757;
}

.action-btn.collected {
  color: #ffa502;
}

.action-count {
  font-size: 20rpx;
  color: inherit;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  gap: 32rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 底部安全区域 */
.safe-area-bottom {
  height: calc(120rpx + env(safe-area-inset-bottom));
}

/* ================================
   现代化样式优化
   ================================ */

/* 拍摄参数卡片 */
.params-card {
  background: #fff;
  margin: 16rpx 24rpx;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

.params-card .card-header {
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.params-card .card-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.params-card .params-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.params-card .param-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  padding: 16rpx;
  background: #fafafa;
  border-radius: 12rpx;
  border: 1rpx solid #f0f0f0;
}

.params-card .param-label {
  font-size: 22rpx;
  color: #999;
  font-weight: 500;
}

.params-card .param-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 600;
}

/* 作品内容优化 */
.work-content .work-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.work-content .tag-item {
  padding: 8rpx 16rpx;
  background: rgba(212, 175, 55, 0.1);
  border-radius: 16rpx;
  font-size: 22rpx;
  color: #d4af37;
  font-weight: 500;
}

.work-content .work-location {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 0;
}

.work-content .location-icon {
  font-size: 24rpx;
}

.work-content .location-text {
  font-size: 26rpx;
  color: #666;
}

.work-content .work-location:active {
  opacity: 0.7;
}
