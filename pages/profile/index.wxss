/* 个人页面样式 */
.profile-page {
  background: #f8f9fa;
  min-height: 100vh;
}

.user-info-section {
  background: white;
  padding: 40rpx 32rpx;
}

.user-header {
  display: flex;
  align-items: flex-start;
  margin-bottom: 32rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 24rpx;
}

.user-details {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.user-location {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 16rpx;
  display: block;
}

.user-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.tag {
  background: #f0f0f0;
  color: #666;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
}

.action-buttons {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  width: 64rpx;
  height: 64rpx;
  background: #f8f9fa;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.action-btn:active {
  transform: scale(0.95);
  background: #e9ecef;
}

.logout-btn:active {
  background: #ffe6e6;
}

.user-stats {
  display: flex;
  justify-content: space-around;
  padding: 32rpx 0;
  border-top: 1rpx solid #f0f0f0;
}

.stat-item {
  text-align: center;
}

.stat-number {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

.tab-section {
  background: white;
  margin-top: 16rpx;
}

.tab-header {
  display: flex;
  border-bottom: 1rpx solid #f0f0f0;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 32rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #333;
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #007aff;
  border-radius: 2rpx;
}

.content-section {
  padding: 32rpx;
}

.upload-prompt {
  text-align: center;
  padding: 80rpx 32rpx;
  color: #666;
}

.prompt-text {
  display: block;
  font-size: 28rpx;
  margin: 24rpx 0 8rpx;
}

.prompt-desc {
  display: block;
  font-size: 24rpx;
  margin-bottom: 40rpx;
}
